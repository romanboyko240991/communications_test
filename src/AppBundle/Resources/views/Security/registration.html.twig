{% trans_default_domain 'FOSUserBundle' %}

<div class="row registration-form">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal fos_user_registration_register'}}) }}

    <div class="form-group">
        {{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-sm-offset-2 col-sm-2'}}) }}
        <div class="col-sm-4">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.username, null, {'label_attr': {'class': 'control-label col-sm-offset-2 col-sm-2'}}) }}
        <div class="col-sm-4">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.username) }}
        </div>
    </div>

    <div id="{{ form.plainPassword.first.vars.full_name }}">
        <div class="form-group">
            {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label col-sm-offset-2 col-sm-2'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label col-sm-offset-2 col-sm-2'}}) }}
            <div class="col-sm-4">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}"/>
        </div>
    </div>
    {{ form_end(form) }}
</div>